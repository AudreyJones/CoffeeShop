<h1>Place your Order!</h1>

<form method="post" action="/order">
  <ul><label>What drink type would you like?</label>
        <%@drinks.each do |drink|%>
          <li><input type="checkbox" name="drinks[]" value="<%= drink.id %>"/> <%= drink.drink_type%></li>
        <%end %>
        <br>
        <p>Additional instructions for your drink? (flavor, foam, toppings)? <input type="text" id="mods" name="mods" value="mods"/></p>
        <p>Would you like to favorite this order? </p>
        <label for="yes">Yes </label><input type="radio" id="yes" name="favorite" value="true"> &nbsp; <label for="no">No </label><input type="radio" id="no" name="favorite" value="false">
        <br>
        <br>
        <input type="submit" id="submit" name="submit" value="Place my Order!"/>
  </ul>
</form>
